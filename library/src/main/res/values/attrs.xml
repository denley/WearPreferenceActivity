<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="Preference">
        <attr name="pref_key" format="string" />
        <attr name="pref_icon" format="reference" />
        <attr name="pref_title" format="string" />
        <attr name="pref_summary" format="string" />
        <attr name="pref_defaultValue" format="string" />
    </declare-styleable>

    <declare-styleable name="ListPreference">
        <attr name="pref_entries" format="reference" />
        <attr name="pref_entryValues" format="reference" />
        <attr name="pref_entryAsSummary" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BooleanPreference">
        <attr name="pref_iconOn" format="reference" />
        <attr name="pref_iconOff" format="reference" />
        <attr name="pref_summaryOn" format="string" />
        <attr name="pref_summaryOff" format="string" />
    </declare-styleable>

    <declare-styleable name="ListItemLayout">
        <attr name="pref_icon_circle_color" format="color" />
        <attr name="pref_icon_circle_color_selected" format="color" />
        <attr name="pref_icon_circle_border_color" format="dimension" />
        <attr name="pref_icon_circle_border_width" format="dimension" />
        <attr name="pref_icon_circle_radius" format="dimension" />
        <attr name="pref_icon_circle_radius_focused" format="dimension" />
    </declare-styleable>

</resources>